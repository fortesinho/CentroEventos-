@page "/"
@inject NavigationManager nav

<h1>Bienvenido al Sistema de Gestión del Centro Deportivo</h1>

<p>Por favor, elegí una opción:</p>

<div class="d-flex gap-3 mt-3">
    <button class="btn btn-primary" @onclick="@(() => nav.NavigateTo("/login"))">
        Iniciar sesión
    </button>
    <button class="btn btn-success" @onclick="@(() => nav.NavigateTo("/registro"))">
        Registrarse
    </button>
</div>